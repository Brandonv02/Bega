  <body>

    <%- include('../views/header'); %>

    <div class="container" style="margin-top: 85px;">
        <h2>USUARIOS</h2>
        
        <br>
        <table id="tabla" class="display" tyle="width:100%">
          <thead>
            <tr>
              <th>Identificacion</th>
              <th>Nombre</th>
              <th>Correo</th>
              <th>Celular</th>
              <th>Direccion</th>
              <th>Contraseña</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%=user.identificacion%></td>
                    <td><%=user.nombre%></td>
                    <td><%=user.correo%></td>
                    <td><%=user.celular%></td>
                    <td><%=user.direccion%></td>
                    <td><%=user.contrasena%></td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#descripcion">
                            <i class='fas fa-eye'></i>
                        </button>
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modificar"
                            onclick="rellenarusu('<%=user.identificacion%>','<%=user.nombre%>','<%=user.correo%>','<%=user.celular%>','<%=user.direccion%>','<%=user.contrasena%>')">
                            <i class='fas fa-edit'></i>
                        </button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#eliminar"><i class='fas fa-trash-alt'></i></button>
                  </td>
                </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
        

    </div>

        <!-- Modal descripcion -->
        <div class="modal fade" id="descripcion">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal body -->
                    <div class="modal-body">

                            <div class="container">
                                <h2>Descripción artículo</h2>
                                <form action="">
                                    <div class="form-group">
                                        <label for="">Material: </label>
                                        <input type="" class="form-control" id="material" placeholder="Tipo material" disabled>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label for="">Composición:</label>
                                        <input type="" class="form-control" id="composicion" placeholder="Composicion" disabled>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label for="">Tamaño:</label>
                                        <input type="" class="form-control" id="tamaño" placeholder="Tamaño" disabled>
                                            
                                    </div>
                                    <div class="fbtn-group">
                                        <div class="col text-center">
                                            <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                    </div>

                </div>
            </div>
        </div>
        
        <!-- Modal modificar -->
        <div class="modal fade" id="modificar">
            <div class="modal-dialog">
                <div class="modal-content">


                    <!-- Modal body -->
                    <div class="modal-body">

                        <div class="container">
                            <h2>Modificar artículo</h2>
                            <form method="post" action="newClient">
                                <div class="form-group">
                                    <label for="">Identificacion: </label>
                                    <input type="text" name="identificacion" class="form-control" id="identificacion" placeholder="identificacion" required>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="">Nombre: </label>
                                    <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Nombre" required>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="">Correo:</label>
                                    <input type="text" name="correo" class="form-control" id="correo" placeholder="Correo" required>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="">Celular:</label>
                                    <input type="text" name="celular" class="form-control" id="celular" placeholder="Celular" required>
                                        
                                </div>
                                <div class="form-group">
                                    <label for="">Direccion:</label>
                                    <input type="text" name="direccion" class="form-control" id="direcci" placeholder="Direccion" required>
                                        
                                </div>
                                <div class="form-group">
                                    <label for="">Contrasena:</label>
                                    <input type="number" name="contrasena" class="form-control" id="contrasena" placeholder="password" required>
                                        
                                </div>
                                <div class="fbtn-group">
                                    <div class="col text-center">
                                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-warning">Modificar</button>

                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <!-- Modal eliminar -->
        <div class="modal fade" id="eliminar">
            <div class="modal-dialog">
                <div class="modal-content">


                    <!-- Modal body -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmacionModalLabel">Confirmación de Eliminación</h5>
                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro de que deseas eliminar este usuario?
                        <form method="post" action="deleteClient">
                            <div class="form-group">
                                <label for="">Identificacion: </label>
                                <input type="text" name="identificacion" class="form-control" id="identificacion" placeholder="identificacion" readonly>
                                
                            </div>
                            <div class="form-group">
                                <label for="">Nombre: </label>
                                <input type="text" name="nombre" class="form-control" id="nombre" placeholder="nombre" readonly>
                            </div>
                            
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                              <button type="submit" class="btn btn-danger">Eliminar</button>
                            
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <!-- Modal carrito -->
