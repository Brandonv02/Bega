<%- include('../views/header'); %>
<body>
    <div class="container">
        <h2><b>Registro de artículos</b></h2>
        
        <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Ab ex explicabo, aut perferendis laborum voluptas sequi blanditiis pariatur, iste, ipsam dolorem! Cupiditate atque, accusamus veritatis molestiae quis numquam est ipsa.</p>
        <div><button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#adicionar"><i class='fas fa-eye'></i> Adicionar productos</button></div><br>
        <table id="tabla" class="display" style="width:100%">
            <thead>
                <tr>
                    <!-- <th>Id</th> -->
                    <th>Código</th>  
                    <th>Descripción</th>
                    <th>Valor</th>
                    <th>Tipo</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% produc.forEach(function(prod) { %>
                <tr>
                    <!-- <td><%=prod.id%></td> -->
                    <td><%=prod.codigo%></td>
                    <td><%=prod.descripcion%></td>
                    <td><%=prod.valor%></td>
                    <td><%=prod.tipo%></td>
                    <td><%=prod.stock%></td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ripcion"><i class='fas fa-eye'></i></button>
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modificar"><i class='fas fa-edit'></i></button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#eliminar"><i class='fas fa-trash-alt'></i></button>
        
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    
    <!-- Modal adicionar -->
    <div class="modal fade" id="adicionar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                
                    
                    
                    <!-- Modal body -->
                    <div class="modal-body">
                            <div class="container">
                                <h2>Adicionar productos</h2>
                                    <form action="/action_page.php">
                                        <div class="form-group">
                                            <label for="">Código: </label>
                                            <input type="text" class="form-control" id="codigo" placeholder="Código" >
                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="">Descripción:</label>
                                            <input type="text" class="form-control" id="descripcion" placeholder="Descripcion" >
                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="">Tipo:</label>
                                            <input type="text" class="form-control" id="tipo" placeholder="Tipo" >
                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="">Valor:</label>
                                            <input type="number" class="form-control" id="valor" placeholder="valor" >
                                                
                                        </div>
                                        <div class="form-group">
                                            <label for="">Stock:</label>
                                            <input type="number" class="form-control" id="stock" placeholder="Stock" >
                                                
                                        </div>
                                        <div class="fbtn-group">
                                            <div class="col text-center">
                                                <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                                                <button type="button" class="btn btn-warning" data-dismiss="modal">Modificar</button>
                                                <button type="button" class="btn btn-success" data-dismiss="modal">Guardar</button>

                                            </div>
                                        </div>
                                    </form>
                            </div>
                    </div>    
            </div>
        </div>
    </div>
    

    <!-- Modal modificar -->
    <div class="modal fade" id="modificar">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal body -->
                <div class="modal-body">
                        <div class="container">
                            <h2>Modificar artículo</h2>
                            <form action="/action_page.php">
                                <div class="form-group">
                                    <label for="">Material: </label>
                                    <input type="" class="form-control" id="material" placeholder="Tipo material" disabled>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="">Composición:</label>
                                    <input type="" class="form-control" id="composicion" placeholder="Composicion" disabled>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="">Tamaño:</label>
                                    <input type="" class="form-control" id="tamaño" placeholder="Tamaño" disabled>
                                        
                                </div>
                                <div class="fbtn-group">
                                    <div class="col text-center">
                                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                                        <button type="button" class="btn btn-warning" data-dismiss="modal">Modificar</button>
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Guardar</button>

                                    </div>
                                </div>
                            </form>
                        </div>

                </div>

            </div>
        </div>
    </div>

    <!-- Modal eliminar -->
    <div class="modal fade" id="eliminar">
        <div class="modal-dialog">
            <div class="modal-content">


                <!-- Modal body -->
                <div class="modal-body">

                        <div class="container">
                            <h2>Eliminar artículo</h2>
                            <form action="/action_page.php">
