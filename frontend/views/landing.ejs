    <script>
        let alerta = "<%= alert %>"
        let error = "<%= error %>"
        let titulo = "<%= title %>"
        if (alerta != "") {
              Swal.fire({
                  // position: "top-end",
                  title: titulo,
                  text: alerta,
                  icon: error,
              });
            }
