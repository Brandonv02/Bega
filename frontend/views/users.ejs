                                    <img src="/assets/imagenes/panos.jpg" alt="" height="80px" >
                                    <label>Paños limpiadores</label><br>
                                    <section class="increment" style="text-align:right;"><label>Precio  $2.300</label><br>
                                    <label for="Cant">Cant.:</label>
                                    <input type="number" id="Cant" name="tentacles" min="1" max="100"></section>
                                </span>

                                <span class="itcarrito">
                                    <img src="/assets/imagenes/escobas.jpeg" alt="" height="80px" >
                                    <label>Escoba cerdas suaves</label><br>
                                    <section class="increment" style="text-align:right;"><label>Precio  $9.200</label><br>
                                    <label for="Cant">Cant.:</label>
                                    <input type="number" id="Cant" name="tentacles" min="1" max="100"></section>
                                </span>
                                <br><br>

                                <div class="fbtn-group">
                                    <div class="col text-center">
                                        <button type="submit" class="btn btn-primary">Comprar</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                </div>

            </div>
        </div>
    </div>
<br>
