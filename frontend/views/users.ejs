  <body>

    <%- include('../views/header'); %>

    <div class="container" style="margin-top: 85px; margin-bottom: 70px;">
        <div class="head-tb">
            <h2>USUARIOS</h2>
            <!-- <button type="button" class="btn btn-success" data-toggle="modal" data-target="#agregar">Agregar usuario <i class='fas fa-edit'></i></button> -->
        </div>
        
        <br>
        <table id="tabla" class="display" tyle="width:100%">
          <thead>
            <tr>
              <th>Correo</th>
              <th>Contraseña</th>
              <th>Rol</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%=user.correo%></td>
                    <td><%=user.contrasena%></td>
                    <td><%=user.rol%></td>
                    <td>
                        <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#modificar"
                            onclick="rellenarusu('<%=user.correo%>','<%=user.contrasena%>','<%=user.rol%>')">
                            <i class='fas fa-edit'></i>
                        </button>
                        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#eliminar"
                            onclick="rellenareli('<%=user.correo%>','<%=user.rol%>')">
                            <i class='fas fa-trash-alt'></i>
                        </button>
                  </td>
                </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
        

    </div>

        <!-- Modal descripcion -->
        <div class="modal fade" id="agregar">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal body -->
                    <div class="modal-body">

                        <div class="container">
                            <h2>Agregar usuario</h2>
                            <form method="post" action="newClientadmin">
                                <div class="form-group">
                                    <label for="">Correo: </label>
                                    <input type="text" name="correo" class="form-control" id="identificacion1" placeholder="identificacion" required>
                                </div>
                                <div class="form-group">
                                    <label for="">Contraseña: </label>
                                    <input type="text" name="contrasena" class="form-control" id="nombre1" placeholder="Nombre" required>
                                </div>
                                <div class="form-group" style="display: flex; flex-direction: column;">
                                    <label for="">Rol:</label>
                                    <select id="seleccionaOpcion" name="rol" class="form-control">
                                        <option value="cliente">cliente</option>
                                        <option value="admin">admin</option>
                                    </select>
                                      
                                </div>
                                
                                <div class="fbtn-group">
                                    <div class="col text-center">
                                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-success">Agregar</button>

                                    </div>
                                </div>
                            </form>
                        </div>

                </div>

                </div>
            </div>
        </div>
        
        <!-- Modal modificar -->
        <div class="modal fade" id="modificar">
            <div class="modal-dialog">
                <div class="modal-content">


                    <!-- Modal body -->
                    <div class="modal-body">

                        <div class="container">
                            <h2>Modificar usuario</h2>
                            <form method="post" action="updateUser">
                                <div class="form-group">
                                    <label for="">Correo: </label>
                                    <input type="text" name="correo" class="form-control" id="identificacion" placeholder="identificacion" required>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="">Contraseña: </label>
                                    <input type="text" name="contrasena" class="form-control" id="nombre" placeholder="Nombre" required>
                                    
                                </div>
                                <div class="form-group" style="display: flex; flex-direction: column;">
                                    <label for="">Rol:</label>
                                    <select id="seleccionaOpcion" name="rol" class="form-control">
                                        <option value="cliente">cliente</option>
                                        <option value="admin">admin</option>
                                    </select>
                                </div>
                                <div class="fbtn-group">
                                    <div class="col text-center">
                                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary">Modificar</button>

                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <!-- Modal eliminar -->
        <div class="modal fade" id="eliminar">
            <div class="modal-dialog">
                <div class="modal-content">


                    <!-- Modal body -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmacionModalLabel">Confirmación de Eliminación</h5>
                        
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro de que deseas eliminar este usuario?
                        <form method="post" action="removeUser">
                            <div class="form-group">
                                <label for="">Correo: </label>
                                <input type="text" name="correo" class="form-control" id="identificacion-e" placeholder="identificacion" readonly>
                            </div>
                            <div class="form-group">
                                <label for="">Rol: </label>
                                <input type="text" name="rol" class="form-control" id="nombre-e" placeholder="nombre" readonly>
                            </div>
                            
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                              <button type="submit" class="btn btn-danger">Eliminar</button>
                            
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <!-- Modal carrito -->
