<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;1,100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@600;700&display=swap" rel="stylesheet">
    <!-- ESTILOS PROPIOS -->
    <link rel="shortcut icon" href="/images/detergente.png" />
    <script src="https://sdk.mercadopago.com/js/v2"></script>
    <link rel="stylesheet" href="/styles/main.css">
    <title>Cotizaciones</title>
  </head>

  <body style="background-image: url('/images/perso-limpia.jpg');
  background-repeat: no-repeat; background-size: cover;">

    <%- include('../views/header'); %>

    <!-- CUERPO DE PAGINA -->

      <div class="container" style="margin: 200px 0px 0px 0px;max-width: 100%;display: flex;justify-content: space-around; margin-bottom: 124px;">
        <h3 class="coti_tittle">COTIZA CON NOSOTROS</h3>
        <form class="coti_form shadow" action="solicitudCotiza" method="post" onsubmit="return validarFormulario()">
          <div class="form-row ">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Nombre completo</label>
              <input type="text" name="nombre" class="form-control" id="inputEmail4">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Telefono</label>
              <input type="number" name="telefono" class="form-control" id="inputPassword4" >
            </div>
          </div>
          <div class="form-group">
            <label for="inputAddress">Correo</label>
            <input type="email" class="form-control" name="correo" id="inputAddress" >
          </div>
          <div class="form-group">
            <label for="inputAddress2">Nombre empresa</label>
            <input type="text" class="form-control" name="compania" id="inputAddress2" >
          </div>
          <div class="form-group">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck" >
              <label class="form-check-label" for="gridCheck">
                Aceptar terminos y condiciones 
              </label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary" style="width: 100%;">Cotizar</button>
        </form>
      </div>

    <!-- FOOTER  -->
    <footer>
        <%- include('../views/footer'); %>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/funciones.js"></script>
    <script>
        let alerta = "<%= alert %>"
        let error = "<%= error %>"
        let titulo = "<%= title %>"
        if (alerta != "") {
              Swal.fire({
                  // position: "top-end",
                  title: titulo,
                  text: alerta,
                  icon: error,
              });
            }
        function validarFormulario() {
        var nombre = document.getElementById('inputEmail4').value;
        var telefono = document.getElementById('inputPassword4').value;
        var correo = document.getElementById('inputAddress').value;
        var compania = document.getElementById('inputAddress2').value;
        var checkbox = document.getElementById('gridCheck').checked;

        if (nombre === '' || telefono === '' || correo === '' || compania === '' || !checkbox) {
          Swal.fire({
            title: "Validar",
            text: "Por favor, completa todos los campos.",
            icon: "warning"
          });
          return false
        }

        if (parseInt(telefono, 10) > 99999999999 || parseInt(telefono, 10) < 999999) {
        Swal.fire({
          title: "Validar",
          text: "Por favor, ingrese su numero de celular valido.",
          icon: "warning"
        });
        return false
      }
        // Puedes agregar más validaciones según tus requisitos.

        return true;
    }
    </script>
  </body>
</html> 