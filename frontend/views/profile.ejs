<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Perfil</title>
    <!-- Agrega el enlace a Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;1,100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""></script>
    <link rel="stylesheet" href="/styles/profile.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>

    <%- include('../views/header'); %>

    <div class="container" style="margin-top: 100px; margin-bottom: 100px;">
        <div class="profile-details mt-4">
            <div class="profile-header">
                <h1><%=profile.nombre%></h1>
                <div class="profile-picture mx-auto">
                    <img src="/images/perfil.jpg" alt="Foto de perfil">
                </div>
            </div>

            <div class="details-container">
                <form id="profileForm" action="updateClient" method="post">
                    <div class="form-group detail">
                        <label for="identificacion">Identificación:</label>
                        <input type="text" id="identificacion" value="<%=profile.identificacion%>" disabled class="form-control">
                    </div>

                    <div class="form-group detail">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" value="<%=profile.nombre%>" disabled class="form-control">
                    </div>

                    <div class="form-group detail">
                        <label for="correo">Correo Electrónico:</label>
                        <input type="email" id="correo" value="<%=profile.correo%>" disabled class="form-control">
                    </div>

                    <div class="form-group detail">
                        <label for="celular">Celular:</label>
                        <input type="tel" id="celular" value="<%=profile.celular%>" disabled class="form-control">
                    </div>

                    <div class="form-group detail">
                        <label for="direccion">Dirección:</label>
                        <input type="text" id="direccion" value="<%=profile.direccion%>" disabled class="form-control">
                    </div>

                    <div class="form-group detail">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" value="<%=profile.contrasena%>" disabled class="form-control">
                    </div>

                    <!-- Puedes agregar más detalles según sea necesario -->

                    <button type="submit" class="update-button btn btn-success mt-3" style="display: none;">Actualizar</button>
                </form>
                <a href="#" class="edit-link btn btn-primary mt-3">Editar Perfil</a>
            </div>
        </div>
    </div>

    <footer>
        <%- include('../views/footer'); %>
    </footer>
    <!-- Agrega el script de Bootstrap JS (opcional) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="/js/funciones.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editLink = document.querySelector('.edit-link');
            const updateButton = document.querySelector('.update-button');
            const profileForm = document.getElementById('profileForm');

            editLink.addEventListener('click', function (event) {
                event.preventDefault();
                enableInputs();
            });

            profileForm.addEventListener('submit', function (event) {
                event.preventDefault();
                // Puedes agregar aquí la lógica para guardar los cambios
                // Por ejemplo, enviar una solicitud al servidor
                // y luego deshabilitar nuevamente los inputs
                disableInputs();
            });

            function enableInputs() {
                const inputs = document.querySelectorAll('.detail input:disabled');
                inputs.forEach(function (input) {
                    input.removeAttribute('disabled');
                });

                updateButton.style.display = 'block';
                editLink.style.display = 'none';
            }

            function disableInputs() {
                const inputs = document.querySelectorAll('.detail input:not(:disabled)');
                inputs.forEach(function (input) {
                    input.setAttribute('disabled', 'disabled');
                });

                updateButton.style.display = 'none';
                editLink.style.display = 'block';
            }
        });
    </script>
</body>
</html>
